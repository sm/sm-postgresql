#!/bin/sh

if [[ "$USER" == "${service_user}" ]]
then
  exec "${service_bin_path}/pg_ctl" restart -D "${service_data_path}" -s

elif user is root
then
  exec su "${service_user}" \
  -c "${service_bin_path}/pg_ctl restart -D '${service_data_path}' -s"
else
  log fail "postgresql restart may only be run as either root or ${service_user}"
fi

