#!/usr/bin/env bash

for tag in ${tags[@]}
do
	case ${tag} in
		(pglb)                   sm pgha nginx upstreams; sm nginx start ;;
		(postgres|postgresql|pg) sm postgresql start ;;
		(master)                 sm postgresql start ;;
		(replica)                sm postgresql start ;;
		(*) echo "Unhandled tag '${tag}', skipping." ;;
	esac
done

